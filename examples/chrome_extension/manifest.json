{
    "manifest_version": 3,
    "name": "Free Barcode & QR Code Scanner",
    "version": "2.0.0",
    "description": "Scan barcodes and QR codes from images, PDFs, and camera using open-source ZXing library. 100% free, no login required.",
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "action": {
        "default_title": "Barcode Scanner"
    },
    "options_page": "settings.html",
    "side_panel": {
        "default_path": "index.html"
    },
    "permissions": [
        "storage",
        "activeTab",
        "tabs",
        "scripting",
        "sidePanel",
        "contextMenus"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content-init.js"
            ],
            "run_at": "document_end"
        }
    ],
    "content_security_policy": {
        "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "scanner.html",
                "scanner.js",
                "icons/icon48.png",
                "libs/zxing-wasm/es/*.js",
                "libs/zxing-wasm/es/**/*.js",
                "libs/zxing-wasm/reader/zxing_reader.wasm",
                "libs/pdfjs/pdf.min.js",
                "libs/pdfjs/pdf.worker.min.js"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ]
}